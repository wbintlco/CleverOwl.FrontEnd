@model IEnumerable<RLI.EntityFramework.EDM.Grade>
@using RLI.Common.Managers
@{
    Dictionary<string, string> Locale = ViewBag.Locale;

}

<div id="GradeTableDiv" class="col-lg-12" style="min-height:320px;">
    <table id="m-table" class="table table-striped- table-bordered table-hover table-checkable dataTable no-footer dtr-inline" role="grid">
        <thead>
            <tr>
                <td></td>
                <td>@Html.Raw(UtilitiesManager.GetFieldLabel(Locale, "GradesPageGrade"))</td>
                <td>@Html.Raw(UtilitiesManager.GetFieldLabel(Locale, "GradesPageCycle"))</td>
                <td>@Html.Raw(UtilitiesManager.GetFieldLabel(Locale, "GradesPageVisibility"))</td>
                <td>@Html.Raw(UtilitiesManager.GetFieldLabel(Locale, "GradesPageActions"))</td>
            </tr>
        </thead>
        <tbody>
            @foreach (var grade in Model)
            {
                <tr>
                    <td>@grade.GradeKey</td>
                    <td>@grade.Grade1</td>
                    <td>@grade.Cycle.Cycle1</td>
                    <td>@grade.Display</td>
                    <td></td>
                </tr>
            }
        </tbody>
    </table>
</div>
