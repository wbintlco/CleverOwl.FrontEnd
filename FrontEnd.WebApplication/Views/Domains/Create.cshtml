</div>


@using (Html.BeginForm("CollectLanguageTranslations", "Domains", FormMethod.Post, new { id = "CollectLanguageTranslationsHidden", @class = "", @style = "display:none;" }))
{

    @Html.AntiForgeryToken()
    @Html.Hidden("langKeys", "")
    @Html.Hidden("domainNames", "")
}

@section Scripts {

    @Scripts.Render("~/bundles/jqueryval")
    @*@Scripts.Render("~/assets/files/base/vendors.bundle.js")

        @Scripts.Render("~/assets/vendors/formrepeater/form-repeater.js")*@
    @Scripts.Render("~/assets/vendors/select2/dist/js/select2.full.min.js")


<script>

        $('select').select2();
        $("#SubjectKey").select2({
            placeholder: '@Html.Raw(UtilitiesManager.GetFieldLabel(Locale, "CreatePageSubject"))'
        });

        $("#GradeKey").select2({
            placeholder: '@Html.Raw(UtilitiesManager.GetFieldLabel(Locale, "CreatePageGrade"))'
        });


        $("#LocalChapterGUID").select2({
            placeholder: 'LocalChapterGUID'
        });


         $("#translationLanguageDropdown").select2({
             placeholder: '@Html.Raw(UtilitiesManager.GetFieldLabel(Locale, "CreatePageLanguageTranslation"))',
             data: @Html.Raw(Json.Encode(ViewBag.LanguageKey))
         });

        $(document).ready(function () {
            $("#ChapterTypeKey").val('@ViewBag.chapterTypeKeySelectedValue').trigger("change");
        })


        var languageTranslationIndex = 1;
        var languageTranslationArrayKeys = [];
        var languageTranslationArrayDomainsName = [];
        $("#addLanguageTranslationBtn").click(function () {

            var LanguageTranslationKey = $("#translationLanguageDropdown option:selected").val();
            var LanguageTranslationText = $("#translationLanguageDropdown option:selected").text();
            var lastchapterTranslationName = $(".domainNameClass").last().val();
            if (languageTranslationArrayKeys.includes(LanguageTranslationKey) || LanguageTranslationKey==='' || lastchapterTranslationName==='') {
                return;
            }
            languageTranslationArrayKeys.push(LanguageTranslationKey);

            var html = '<div data-repeater-item="" id="languageTranslationRepeater_'+languageTranslationIndex+'" class="form-group m-form__group row align-items-center"><div class="col-md-4"><div class="m-form__group m-form__group--inline">';
            html += '<div class="m-form__label control-label"><label>@Html.Raw(UtilitiesManager.GetFieldLabel(Locale, "CreatePageLanguageTranslation"))</label></div>';
            html += '<div class="m-form__control"><input type="text" disabled="" class="form-control m-input" placeholder="'+LanguageTranslationText+'""></div></div>';
            html += '<div class="d-md-none m--margin-bottom-10"></div></div><div class="col-md-4"><div class="m-form__group m-form__group--inline">';
            html += '<div class="m-form__label"><label class="m-label m-label--single">@Html.Raw(UtilitiesManager.GetFieldLabel(Locale, "CreatePageDomainName"))</label></div>';
            html += '<div class="m-form__control"><input type="text" class="form-control m-input domainNameClass" placeholder="@Html.Raw(UtilitiesManager.GetFieldLabel(Locale, "CreatePageDomainName"))"></div></div>';
            html += '<div class="d-md-none m--margin-bottom-10"></div></div><div class="col-md-4"><div class="m-form__label"><label class="m-label m-label--single" style="visibility:hidden;">Name</label></div>';
            html += '<div data-repeater-delete="" data-langKey="'+LanguageTranslationKey+'" data-repeaterId="languageTranslationRepeater_'+languageTranslationIndex+'" class="btn-sm btn btn-danger m-btn m-btn--icon m-btn--pill deleteTranslationBtn"><span><i class="la la-trash-o"></i><span>@Html.Raw(UtilitiesManager.GetFieldLabel(Locale, "CreatePageDelete"))</span></span></div></div></div>';

            $("#repeaterDiv").append(html);
            languageTranslationIndex++;
            $("#translationLanguageDropdown ").val('').trigger("change");
            $("#TranslationLanguageKeys").val(JSON.stringify(languageTranslationArrayKeys));


            console.log(languageTranslationArrayKeys);

        })

        function removeKeyFromArray(array,i) {
            const index = array.indexOf(i);
if (index > -1) {
  array.splice(index, 1);
}
        }
    $(document).on("click", ".deleteTranslationBtn", function () {
        var divToDelete = $(this).attr("data-repeaterId");
        var langKey = $(this).attr("data-langKey");

        removeKeyFromArray(languageTranslationArrayKeys, langKey);
        $("#" + divToDelete).remove();
        console.log(languageTranslationArrayKeys);
    });

        $(".submitBtn").click(function () {
            mApp.block($("#DomainsDiv"));
            if ($(this).attr("id") == "submitBtn") {
                event.preventDefault();
                $('.domainNameClass').each(function (index, value) {
                    languageTranslationArrayDomainsName.push($(this).val());
                });
                $("#LanguageTransaltionKeys").val(JSON.stringify(languageTranslationArrayKeys));
                $("#DomainNamesPerLanguage").val(JSON.stringify(languageTranslationArrayDomainsName));

                $('#createForm').submit();
            } else {
                console.log("continue");
                event.preventDefault();
                $('.domainNameClass').each(function (index, value) {
                    languageTranslationArrayDomainsName.push($(this).val());
                });
                $("#LanguageTransaltionKeys").val(JSON.stringify(languageTranslationArrayKeys));
                $("#DomainNamesPerLanguage").val(JSON.stringify(languageTranslationArrayDomainsName));
                $('#continue').val("true");
                console.log($('#continuecontinue').val("true"));
                $('#createForm').submit();
            }
            
            
         });



        $("#GradeKey").change(function () {
            $("#ChapterTypeKey").val('').trigger("change");
            $("#SubjectKey").val('').trigger("change");
        })

         $("#SubjectKey").change(function () {
            $("#ChapterTypeKey").val('').trigger("change");
        })
</script>
}

