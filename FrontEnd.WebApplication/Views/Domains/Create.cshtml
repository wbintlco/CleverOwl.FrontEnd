                    </div>

                    <div class="col-lg-4 col-md-4 col-sm-4">
                        <input type="submit" id="submitBtnAndContinue" value="@Html.Raw(UtilitiesManager.GetFieldLabel(Locale, "CreatePageCreateAndContinue"))" class="btn m-btn--pill btn-outline-brand m-btn m-btn--outline-2x w-100 submitBtn" />

                    </div>
                    <div class="col-lg-4 col-md-4 col-sm-4 mt-1">
                        <a class="btn m-btn--pill btn-outline-metal m-btn m-btn--outline-2x w-100" href="@Url.Action("Index","Domains")">@Html.Raw(UtilitiesManager.GetFieldLabel(Locale, "CreatePageBackToDomains"))</a>
                    </div>
                </div>
            </div>
        </div>
