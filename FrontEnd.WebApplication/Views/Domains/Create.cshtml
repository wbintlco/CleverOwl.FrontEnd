@model FrontEnd.WebApplication.Models.DomainViewModel
@using RLI.Common.Managers


@{
    Dictionary<string, string> Locale = ViewBag.Locale;
    ViewBag.Title = Html.Raw(UtilitiesManager.GetFieldLabel(Locale, "DomainCreatePageTitle"));
}

<style>
    .select2-results__group {
        color: #0E8BF2 !important;
        font-size: 20px !important;
        font-weight: bold;
    }
</style>

<div class="m-portlet m-portlet--mobile" id="DomainsDiv">
    <div class="m-portlet__head">
        <div class="m-portlet__head-caption">
            <div class="m-portlet__head-title">
                <h3 class="m-portlet__head-text">
                    @Html.Raw(UtilitiesManager.GetFieldLabel(Locale, "CreatePageAddDomain"))
                </h3>
            </div>
        </div>
        <div class="m-portlet__head-tools">
        </div>
    </div>
    <div class="m-portlet__body" style="padding:10px;">

        @using (Html.BeginForm(null, null, FormMethod.Post, new { id = "createForm" }))
        {
            @Html.AntiForgeryToken()

        <div class="form-horizontal">
            @Html.ValidationSummary(true, "", new { @class = "text-danger" })
            <div class="form-group">
                <label class="control-label col-md-2" for="Domain1">@Html.Raw(UtilitiesManager.GetFieldLabel(Locale, "CreatePageDomain"))</label>
                <div class="col-md-12">
                    @Html.EditorFor(model => model.Domain1, new { htmlAttributes = new { @class = "form-control", style = "width:100%" } })
                    @Html.ValidationMessageFor(model => model.Domain1, Html.Raw(UtilitiesManager.GetFieldLabel(Locale, "ChaptersCreatePageChapterError")).ToString(), new { @class = "text-danger" })
                </div>
            </div>
            <div class="form-group">
                <label class="control-label col-md-2" for="GradeKey">@Html.Raw(UtilitiesManager.GetFieldLabel(Locale, "CreatePageGrade"))</label>
                <div class="col-md-12">
                    @Html.DropDownList("GradeKey", null, "", htmlAttributes: new { @class = "form-control", style = "width:100%" })
                    @Html.ValidationMessageFor(model => model.GradeKey, Html.Raw(UtilitiesManager.GetFieldLabel(Locale, "ChaptersCreatePageGradeError")).ToString(), new { @class = "text-danger" })
                </div>
            </div>
            <div class="form-group">
                <label class="control-label col-md-2" for="SubjectKey">@Html.Raw(UtilitiesManager.GetFieldLabel(Locale, "CreatePageSubject"))</label>
                <div class="col-md-12">
                    @Html.DropDownList("SubjectKey", null, "", htmlAttributes: new { @class = "form-control", style = "width:100%" })
                    @Html.ValidationMessageFor(model => model.SubjectKey, Html.Raw(UtilitiesManager.GetFieldLabel(Locale, "ChaptersCreatePageSubjectError")).ToString(), new { @class = "text-danger" })
                </div>
            </div>

            <div class="form-group" hidden>
                <label class="control-label col-md-2">LanguageTransaltionKeys</label>
                <div class="col-md-12">
                    <input name="LanguageTransaltionKeys" id="LanguageTransaltionKeys" />
                </div>
            </div>

            <div class="form-group" hidden>
                <label class="control-label col-md-2">DomainNamesPerLanguage</label>
                <div class="col-md-12">
                    <input name="DomainNamesPerLanguage" id="DomainNamesPerLanguage" />
                </div>
            </div>

            <div class="form-group" hidden>
                <label class="control-label col-md-2">cnt</label>
                <div class="col-md-12">
                    <input name="andContinue" id="continue" value="false" />
                </div>
            </div>
            <div class="form-group" hidden>
                <label class="control-label col-md-2">DomainNamesPerLanguage</label>
                <div class="col-md-12">
                    <input name="DomainNamesPerLanguage" id="DomainNamesPerLanguage" />
                </div>
            </div>
            

            @*<div class="form-group">
            <label class="control-label col-md-2" for="DomainIndex">DomainIndex</label>
            <div class="col-md-12">

                <select id="domainsPreview" name="DomainIndex" style="width:100%;">
                    <option></option>
                </select>
                @Html.ValidationMessageFor(model => model.DomainIndex, "", new { @class = "text-danger" })
            </div>
        </div>*@

            <div class="m-portlet m-portlet--mobile">
                <div class="m-portlet__head">
                    <div class="m-portlet__head-caption">
                        <div class="m-portlet__head-title">
                            <h3 class="m-portlet__head-text">
                                @Html.Raw(UtilitiesManager.GetFieldLabel(Locale, "CreatePageDomainTranslation"))
                            </h3>
                        </div>
                    </div>
                    <div class="m-portlet__head-tools">
                    </div>
                </div>
                <div class="m-portlet__body" style="padding:10px;">
                    <div class="form-group">
                        <label class="control-label col-md-2" for="LanguageKey">@Html.Raw(UtilitiesManager.GetFieldLabel(Locale, "CreatePageLanguageTranslation"))</label>
                        <div class="col-md-4">
                            <select id="translationLanguageDropdown" name="LanguageKey" style="width:100%">
                                <option></option>
                            </select>
                        </div>
                    </div>
                    <div class="m-form__section m-form__section--first">

