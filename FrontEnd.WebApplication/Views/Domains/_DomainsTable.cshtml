@model IEnumerable<RLI.EntityFramework.EDM.Domain>
@using RLI.Common.Managers
@{
    Dictionary<string, string> Locale = ViewBag.Locale;

}
<div id="ChaptersTableDiv" class="col-lg-12" style="min-height:320px;">
    <table id="m-table" class="table table-striped- table-bordered table-hover table-checkable dataTable no-footer dtr-inline" role="grid">
        <thead>
            <tr>
                <td></td>
                
                <td> @Html.Raw(UtilitiesManager.GetFieldLabel(Locale, "DomainsPageGrade"))</td>
                <td> @Html.Raw(UtilitiesManager.GetFieldLabel(Locale, "DomainsPageSubject"))</td>
                <td> @Html.Raw(UtilitiesManager.GetFieldLabel(Locale, "DomainsPageDomain"))</td>
                <td> @Html.Raw(UtilitiesManager.GetFieldLabel(Locale, "DomainsPageStatus"))</td>
                <td> @Html.Raw(UtilitiesManager.GetFieldLabel(Locale, "DomainsPageActions"))</td>
            </tr>
        </thead>
        <tbody>
            @foreach (var domain in Model)
            {
            <tr>
                <td>@domain.DomainKey</td>
                <td>@domain.Grade.Grade1</td>
                <td>@domain.Subject.Subject1</td>
                <td>@domain.Domain1</td>
                <td class="@(domain.StatusKey==(int)RLI.Common.Enums.StatusEnum.StatusApproved?"m--font-success":domain.StatusKey==(int)RLI.Common.Enums.StatusEnum.StatusRejected?"m--font-danger":"m--font-warning")">
                    @Html.DisplayFor(modelItem => domain.Status.Status1)
                </td>
                <td></td>
            </tr>
            }
        </tbody>
    </table>
</div>
