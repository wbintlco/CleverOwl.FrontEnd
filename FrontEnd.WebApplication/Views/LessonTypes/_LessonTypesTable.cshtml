@model IEnumerable<RLI.EntityFramework.EDM.LessonType>
@using RLI.Common.Managers
@{
    Dictionary<string, string> Locale = ViewBag.Locale;

}

<div id="LessonTypeTableDiv" class="col-lg-12" style="min-height:320px;">
    <table id="m-table" class="table table-striped- table-bordered table-hover table-checkable dataTable no-footer dtr-inline" role="grid">
        <thead>
            <tr>
                <td></td>
                <td>@Html.Raw(UtilitiesManager.GetFieldLabel(Locale, "LessonTypesPageLessonType"))</td>
                <td>@Html.Raw(UtilitiesManager.GetFieldLabel(Locale, "LessonTypesPageIconHtml"))</td>
                <td>@Html.Raw(UtilitiesManager.GetFieldLabel(Locale, "LessonTypesPageActions"))</td>
            </tr>
        </thead>
        <tbody>
            @foreach (var lessonType in Model)
            {
                <tr>
                    <td>@lessonType.LessonTypeKey</td>
                    <td>@lessonType.LessonType1</td>
                    <td align="center"><div class="@lessonType.IconHTML fa-2x"></div></td>
                    <td></td>
                </tr>
            }
        </tbody>
    </table>
</div>




