@model IEnumerable<RLI.EntityFramework.EDM.Subject>
@using RLI.Common.Managers
@{
    Dictionary<string, string> Locale = ViewBag.Locale;

}

<div id="SubjectTableDiv" class="col-lg-12" style="min-height:320px;">
    <table id="m-table" class="table table-striped- table-bordered table-hover table-checkable dataTable no-footer dtr-inline" role="grid">
        <thead>
            <tr>
                <td></td>
                <td>@Html.Raw(UtilitiesManager.GetFieldLabel(Locale, "SubjectsPageSubject"))</td>
                <td>@Html.Raw(UtilitiesManager.GetFieldLabel(Locale, "SubjectsPageVisibility"))</td>
                <td>Actions</td>
            </tr>
        </thead>
        <tbody>
            @foreach (var subject in Model)
            {
                <tr>
                    <td>@subject.SubjectKey</td>
                    <td>@subject.Subject1</td>
                    <td>@subject.Display</td>
                    <td></td>
                </tr>
            }
        </tbody>
    </table>
</div>

