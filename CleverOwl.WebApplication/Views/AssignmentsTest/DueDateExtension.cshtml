<!--========================-->
<!--=       Dashboard      =-->
<!--========================-->
<div class="blog-post-archive">
    <div class="container">

        <!--Begin::Main Portlet-->
        <div class="m-portlet m-portlet--full-height" style="overflow:hidden;">
            <!--begin: Portlet Body-->
            <div class="m-portlet__body m-portlet__body--no-padding">

                <!--begin: Form Wizard-->
                <div class="m-wizard m-wizard--3 m-wizard--primary" id="m_wizard">

                    <!--begin: Message container -->
                    <div class="m-portlet__padding-x">

                        <!-- Here you can put a message or alert -->
                    </div>

                    <!--end: Message container -->
                    <div class="row m-row--no-padding">
                        <div class="col-xl-1 col-lg-12"></div>
                        <div class="col-xl-4 col-lg-12">

                            <!--begin: Form Wizard Head -->
                            <div class="m-wizard__head">

                                <!--begin: Form Wizard Progress -->
                                <div class="m-wizard__progress">
                                    <div class="progress">
                                        <div class="progress-bar" role="progressbar" aria-valuenow="100" aria-valuemin="0" aria-valuemax="100"></div>
                                    </div>
                                </div>

                                <!--end: Form Wizard Progress -->
                                <!--begin: Form Wizard Nav -->
                                <div class="m-wizard__nav">
                                    <div class="m-wizard__steps">
                                        <div class="m-wizard__step m-wizard__step--current" id="m-wizard__step_1" m-wizard-target="m_wizard_form_step_1">
                                            <div class="m-wizard__step-info">
                                                <a href="#" class="m-wizard__step-number">
                                                    <span><span>1</span></span>
                                                </a>
                                                <div class="m-wizard__step-label">
                                                    <h3 class="m-auto m--padding-left-15 font-weight-bold wizard-step-title-custom">Availability</h3>
                                                    @*<div class="m-auto m--padding-left-15">Availability</div>*@
                                                </div>
                                            </div>
                                        </div>
                                        <div>
                                            @Html.Partial("_AssigImage");
                                        </div>
                                    </div>
                                </div>

                                <!--end: Form Wizard Nav -->
                            </div>

                            <!--end: Form Wizard Head -->
                        </div>
                        <div id="head" class="col-xl-7 col-lg-12" style="background-color: rgb(253,248,248);">

                            <!--begin: Form Wizard Form-->
                            <div class="m-wizard__form m--padding-5-tablet-and-mobile">

                                <!--
                                    1) Use m-form--label-align-left class to alight the form input lables to the right
                                    2) Use m-form--state class to highlight input control borders on form validation
                                -->
                                <div class="m-portlet__body m-portlet__body--no-padding">

                                    <!--begin: Form Wizard Step 1-->
                                    <div class="m-wizard__form-step m-wizard__form-step--current" id="m_wizard_form_step_1" data-form-id="generalForm">
                                        <form id="availabilityForm">
                                            <!-- to move to partial -->
                                            <div class="m-form__heading">
                                                <h3 class="font-weight-bold">
                                                    <i class="fas fa-clock" style="padding-right: 20px;font-size:3rem;"></i>
                                                    Availability
                                                </h3>
                                            </div>
                                            <div class="m-portlet__body" style="margin-top:40px">
                                                <div class="row">
                                                    <div class="col-12">
                                                        <lable>Allow submission from</lable>
                                                    </div>
                                                    <div class="col-12">
                                                        <input id="submissionDate" type="datetime-local" style="width:100%; cursor:pointer" enable="enable">
                                                        <span id="submissionDateHelp" class="m-form__help" style="display:none; color:red">field required!</span>
                                                    </div>
                                                </div>
                                                <div class="row" style="margin-top:35px">
                                                    <div class="col-12">
                                                        <lable>Due Date</lable>
                                                    </div>
                                                    <div class="col-12">
                                                        <input type="datetime-local" id="dueDate" style="width:100%; cursor:pointer">
                                                        <span id="dueDateHelp" class="m-form__help" style="display:none; color:red">field required!</span>
                                                    </div>
                                                </div>
                                                <div class="row" style="margin-top:35px">
                                                    <div class="col-12">
                                                        <lable>Remind me to grade by</lable>
                                                    </div>
                                                    <div class="col-12">
                                                        <input type="datetime-local" id="reminderDate" style="width:100%; cursor:pointer">
                                                        <span id="reminderDateHelp" class="m-form__help" style="display:none; color:red">field required!</span>
                                                    </div>
                                                </div>
                                            </div>
                                        </form>
                                    </div>
                                </div>
                                <div class="m-form m-form--label-align-left- m-form--state-">
                                    <!--begin: Form Actions -->
                                    <div class="m-portlet__foot m-portlet__foot--fit m--margin-top-40">
                                        <div class="m-form__actions">
                                            <div class="row">
                                                <div class="col-6" m--align-right mt-2">
                                                </div>
                                                <div class="col-6 m--align-right mt-2">
                                                    <a href="#" class="btn btn-brand m-btn m-btn--custom m-btn--icon" data-wizard-action="submit" style="margin:50px">
                                                        <span>
                                                            <i class="la la-check"></i>&nbsp;&nbsp;
                                                            <span>Save</span>
                                                        </span>
                                                    </a>
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                    <!--end: Form Actions -->
                                </div>
                            </div>
                        </div>
                        <!--end: Form Wizard Form-->
                    </div>

                </div>
            </div>

            <!--end: Form Wizard-->
        </div>

        <!--end: Portlet Body-->
    </div>

    <!--End::Main Portlet-->

</div><!-- /.dashboard -->


@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
    @Scripts.Render("~/assets/files/wizard/assignments-create-wizard.js")



    <script>

        $("#submissionDate").prop('disabled', true);

    </script>


}