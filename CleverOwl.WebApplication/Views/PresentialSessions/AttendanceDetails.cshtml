@model List<RLI.WebApplication.Models.AttendanceDetailsViewModel>
@using RLI.EntityFramework.EDM
@using RLI.Common.Managers
@{

    ViewBag.Title = "PresentialSessionsAttendanceDetailsPage22";
    Dictionary<string, string> Locale = ViewBag.Locale;
    Language currentLanguage = ViewBag.CurrentLanguage;
}
@Styles.Render("~/assets/vendors/custom/datatables/datatables.bundle.css")
<div class="container">
    <div class="row">
        <h4>@ViewBag.SessionTitle</h4>
    </div>
    <div class="row">
        <div id="ChaptersTableDiv" class="col-lg-12" style="min-height:320px;">
            <table class="table table-striped- table-bordered table-hover table-checkable mt-5" id="m_table_1">
                <thead>
                    <tr>
                        <th>
                            @Html.Raw(UtilitiesManager.GetFieldLabel(Locale, "PresentialSessionsPageDetailsTableHeadFirstName"))
                        </th>
                        <th>
                            @Html.Raw(UtilitiesManager.GetFieldLabel(Locale, "PresentialSessionsPageDetailsTableHeadMiddleName"))
                        </th>
                        <th>
                            @Html.Raw(UtilitiesManager.GetFieldLabel(Locale, "PresentialSessionsPageDetailsTableHeadLastName"))
                        </th>
                        <th>
                            @Html.Raw(UtilitiesManager.GetFieldLabel(Locale, "PresentialSessionsPageDetailsTableHeadAttendance"))
                        </th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr>

                            <td>
                                @item.FirstName
                            </td>
                            <td>
                                @item.MiddleName
                            </td>
                            <td>
                                @item.LastName
                            </td>

                            <td>
                                @item.AttendedOrNot
                            </td>
                        </tr>
                    }
                </tbody>

            </table>
        </div>
    </div>
</div>
@section Scripts {
    @Scripts.Render("~/assets/vendors/custom/datatables/datatables.bundle.js")
    <script>
            $(document).ready(function () {
                $('#m_table_1').dataTable();
            });
    </script>

}


