@model RLI.WebApplication.Models.SynchronousSessionsAudienceViewModel
@using RLI.Common.Managers
@{
    Dictionary<string, string> Locale = ViewBag.Locale;
}

<style>
    .col-form-label {
        margin-top: 7px;
    }
</style>

@using (Html.BeginForm("SessionAudience", "SynchronousSessions", FormMethod.Post, new { @class = "m-form m-form--label-align-left", @id = "sessionAudienceForm", role = "form" }))
{
    @Html.AntiForgeryToken()
    <div class="m-form__heading">
        <h3 class="font-weight-bold">
            @Html.Raw(UtilitiesManager.GetFieldLabel(Locale, "SynchronousSessionsPageCreateSessionAudience"))
        </h3>
    </div>
    <div class="form-horizontal">
        <div class="m-form__content">
            @*@Html.ValidationSummary("", new { @class = "text-danger mt-4" })*@
        </div>
        <div class="form-group m-form__group row">
            <label class="col-lg-3 col-form-label text-primary"> @Html.Raw(UtilitiesManager.GetFieldLabel(Locale, "SynchronousSessionsPageCreateSelectSchool"))</label>
            <div class="col-lg-9">
                @{string school = Html.Raw(UtilitiesManager.GetFieldLabel(Locale, "SynchronousSessionsPageCreateFeildRequired1")).ToString(); }
                <span>
                    <select id="SchoolsDropDown" class="select-field form-control" style="width:100%">
                    </select>
                    @Html.HiddenFor(model => model.SchoolKey)
                </span>
                <span class="m-form__help m--margin-left-30">@Html.Raw(UtilitiesManager.GetFieldLabel(Locale, "SynchronousSessionsPageCreateStartBySelectingSchool"))</span>
                @Html.ValidationMessageFor(model => model.SchoolKey, school, new { @class = "text-danger m--margin-left-20 m--margin-top-5", @style = "display:block;" })
            </div>
        </div>
        <div class="form-group m-form__group row">
            <label class="col-lg-3 col-form-label text-primary">@Html.Raw(UtilitiesManager.GetFieldLabel(Locale, "SynchronousSessionsPageCreateSelectGrade"))</label>
            <div class="col-lg-9">
                @{string grade = Html.Raw(UtilitiesManager.GetFieldLabel(Locale, "SynchronousSessionsPageCreateFeildRequired1")).ToString(); }
                <span>
                    <select id="GradesDropDown" class="select-field form-control" style="width:100%">
                    </select>
                    @Html.HiddenFor(model => model.GradeKey)
                </span>
                <span class="m-form__help m--margin-left-30">
                    @Html.Raw(UtilitiesManager.GetFieldLabel(Locale, "SynchronousSessionsPageThenSelectTheGrade"))
                </span>
                @Html.ValidationMessageFor(model => model.GradeKey, grade, new { @class = "text-danger m--margin-left-20 m--margin-top-5", @style = "display:block;" })
            </div>
        </div>
        <div class="form-group m-form__group row">
            <label class="col-lg-3 col-form-label text-primary">@Html.Raw(UtilitiesManager.GetFieldLabel(Locale, "SynchronousSessionsPageCreateSelectSubject"))</label>
            <div class="col-lg-9">
                @{string subject = Html.Raw(UtilitiesManager.GetFieldLabel(Locale, "SynchronousSessionsPageCreateFeildRequired1")).ToString(); }
                <select id="SubjectsDropDown" class="select-field form-control" style="width:100%">
                </select>
                @Html.HiddenFor(model => model.SubjectKey)
                <span class="m-form__help m--margin-left-30">@Html.Raw(UtilitiesManager.GetFieldLabel(Locale, "SynchronousSessionsPageCreateAndFinallyTheSubject"))</span>
                @Html.ValidationMessageFor(model => model.SubjectKey, subject, new { @class = "text-danger m--margin-left-20 m--margin-top-5", @style = "display:block;" })
            </div>
        </div>
        <div class="form-group m-form__group row">
            <label class="col-lg-3 col-form-label text-primary"> @Html.Raw(UtilitiesManager.GetFieldLabel(Locale, "SynchronousSessionsPageCreateSelectChapter"))</label>
            <div class="col-lg-9">
                
                <span>
                    <select id="topicDropDown" class="select-field form-control" style="width:100%">
                    </select>
                    @Html.HiddenFor(model => model.ChapterKey)
                </span>
                <span class="m-form__help m--margin-left-30">@Html.Raw(UtilitiesManager.GetFieldLabel(Locale, "SynchronousSessionsPageCreateStartBySelectingChapter"))</span>
               
            </div>
        </div>
    </div>
}

